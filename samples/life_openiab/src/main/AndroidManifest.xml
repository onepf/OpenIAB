<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.onepf.lifegame">

    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="com.nokia.payment.BILLING" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.tmoney.vending.INBILLING" />
    <uses-permission android:name="com.sec.android.iap.permission.BILLING" />
    <uses-permission android:name="org.onepf.openiab.permission.BILLING" />
    <uses-permission android:name="com.slideme.sam.manager.inapp.permission.BILLING" />

    <permission android:name="com.tmoney.vending.INBILLING" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="iap:api_version"
            android:value="13" />
        <activity
            android:name="org.onepf.lifegame.GameActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|locale"
            android:label="@string/title_activity_game"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.amazon.device.iap.ResponseReceiver">
            <intent-filter>
                <action
                    android:name="com.amazon.inapp.purchasing.NOTIFY"
                    android:permission="com.amazon.inapp.purchasing.Permission.NOTIFY" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
